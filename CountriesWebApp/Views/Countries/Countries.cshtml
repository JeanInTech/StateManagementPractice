
@{
    ViewData["Title"] = "Countries";
}
@model List<Country>

<h3>Which country would you like to learn more about?</h3>
@for (int i = 0; i < Model.Count; i++)
    {
        Country c = Model[i];
        <p>@c.Name</p>

        <form action="Countries/CountryDetails" method="post">
            <input hidden name="index" value="@i" />
            <input type="submit" name="Submit" />
        </form>
    }